<div class="row">
    <form action="/admin/sendmultiple" method="POST">
        <div class="form-group">
            <label>Заголовок</label><br>
            <input type="text" name="title" />
        </div>
        <div class="form-group">
            <label>Описание</label><br>
            <input type="text" id="description" name="description" class="form-control"/><br>
        </div>
        {{#if topicToSend}} 
        <div class="form-group">
            <label>Тема для отправки: {{topicToSend.title}}</label>
            <input type="hidden" id="id" name="id" value="{{topicToSend._id}}" />
            <input type="hidden" id="themetitle" name="themetitle" value="{{topicToSend.title}}" />
        </div>
        {{else}}
            <div class="form-group">
                <div class="dropdown">
                <div class="form-group">
                        <label for="sel1">Подписанные устройства</label>
                        <select class="form-control" id="devices">
                            
                        </select>
                    </div>
                </div>
            </div>
        {{/if}}
        
        <input type="submit" value="Отправить" class="btn btn-primary"/>
    </form>
</div>