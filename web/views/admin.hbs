<div class="row">
    <form id="addTheme" name="addTheme" action="" method="post">
        <input type="submit" value="Send" class="badge badge-circle"/>
    </form>
</div>
<div class="row">
    <form id="sendNotification" name = "sendNotification" action="" method="POST">
        <div class="form-group">
            <label>Заголовок</label><br>
            <input type="text" name="title" />
        </div>
        <div class="form-group">
            <label>Описание</label><br>
            <input type="text" id="description" name="description"/><br>
        </div>
        <div class="form-group">
            <div class="dropdown">
               <div class="form-group">
                    <label for="sel1">Подписанные устройства</label>
                    <select class="form-control" id="devices">
                        {{#each devices}}
                            <option>{{this}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>
        <input type="submit" value="Send" class="btn btn-primary"/>
    </form>
</div>